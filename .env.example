# Required for Flask
FLASK_SECRET_KEY=your_secret_key_here
PORT=3000

# Required for Google OAuth and Calendar
GOOGLE_CLIENT_ID=your_client_id_from_google_cloud_console
GOOGLE_CLIENT_SECRET=your_client_secret_from_google_cloud_console
GOOGLE_REDIRECT_URI=https://virtual-assistant.ngrok.io/meetings/google_authenticate
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar

# Optional: Office 365 Integration
OFFICE365_CLIENT_ID=your_office365_client_id
OFFICE365_CLIENT_SECRET=your_office365_client_secret
OFFICE365_REDIRECT_URI=your_office365_redirect_uri
OFFICE365_SCOPES=your_office365_scopes